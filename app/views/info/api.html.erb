<div class="box">
  <h1>RailsCasts-China API 目录</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Method</th>
        <th>URL</th>
      </tr>
    </thead>
    <tbody>
    <% RailsCastsChina::API.routes.each do |route| %>
      <tr>
        <td><%= route.route_method %></td>
        <%= route.route_path %>
        <% route_path = route.route_path.gsub("(.:format)",".json") %>
        <td><%= request.protocol %><%= route_path %></td>
      </tr>
    <% end %>
  </table>
</div>

